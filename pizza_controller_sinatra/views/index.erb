<h2>All Pizza Orders</h2>

<% @pizzas.each() do |pizza| %>
  
    <p>Name: <%= pizza.pretty_name() %></p>
<img src="../public/pizza.gif" alt="Cowboy pizza guy" height ="128" width="128" align="right">
    <p>Order: <%= pizza.quantity %> x <%= pizza.topping %></p>
    <p><a href="/pizzas/<%= pizza.id %>">Show Order</a></p>
    <p><a href="pizzas/<%= pizza.id %>/edit">Edit Order</a></p>
    <form action="/pizzas/<%=pizza.id%>/delete" method="POST">
    <input type="submit" value="Delete Order">
    </form>
  <hr/>
<% end %>

